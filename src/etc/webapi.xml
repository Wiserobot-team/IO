<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Product Service -->
    <route url="/V1/wiserobotio/products" method="POST">
        <service class="Wiserobot\Io\Api\ProductIoInterface" method="products" />
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wiserobotio/products/import" method="POST">
        <service class="Wiserobot\Io\Api\ProductImportInterface" method="import" />
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <!-- Order Service -->
    <route url="/V1/wiserobotio/orders" method="POST">
        <service class="Wiserobot\Io\Api\OrderIoInterface" method="orders" />
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wiserobotio/orders/import" method="POST">
        <service class="Wiserobot\Io\Api\OrderImportInterface" method="import" />
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wiserobotio/payment-methods" method="GET">
        <service class="Wiserobot\Io\Api\PaymentIoInterface" method="payments" />
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wiserobotio/shipping-methods" method="GET">
        <service class="Wiserobot\Io\Api\ShippingIoInterface" method="shippings" />
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wiserobotio/shipments/import" method="POST">
        <service class="Wiserobot\Io\Api\ShipmentImportInterface" method="import" />
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/wiserobotio/refunds/import" method="POST">
        <service class="Wiserobot\Io\Api\RefundImportInterface" method="import" />
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
